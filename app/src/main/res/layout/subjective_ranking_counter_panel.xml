<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_team_number"
        style="@style/tv_team_number_subj"
        android:layout_weight="1"
        android:textSize="@dimen/medium_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/panel_linear_layout">

        <com.frc1678.match_collection.SubjectiveRankingCounter
            android:id="@+id/counter_quickness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            custom:dataName="Quickness" />

        <com.frc1678.match_collection.SubjectiveRankingCounter
            android:id="@+id/counter_field_awareness_near"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            custom:dataName="Near Aware" />

        <com.frc1678.match_collection.SubjectiveRankingCounter
            android:id="@+id/counter_field_awareness_far"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            custom:dataName="Far Aware" />
    </LinearLayout>

</LinearLayout>