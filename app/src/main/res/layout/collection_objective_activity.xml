<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/objective_match_collection_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:padding="@dimen/very_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_undo"
            style="@style/btn_undo"
            android:text="@string/btn_undo" />

        <ToggleButton
            android:id="@+id/tb_action_two"
            style="@style/tb_low_high"
            android:textOff="@string/tb_action_bool_two_off"
            android:textOn="@string/tb_action_bool_two_on" />

        <Button
            android:id="@+id/btn_redo"
            style="@style/btn_redo"
            android:text="@string/btn_redo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_near"
            style="@style/goal_position_label"
            android:text="@string/near_label"
            android:textColor="@color/low_near"/>

        <TextView
            android:id="@+id/tv_far"
            style="@style/goal_position_label"
            android:text="@string/far_label"
            android:textColor="@color/low_far"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action_one"
            style="@style/btn_action_near"
            android:text="@string/btn_action_one" />

        <Button
            android:id="@+id/btn_action_two"
            style="@style/btn_action_far"
            android:text="@string/btn_action_two" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action_three"
            style="@style/btn_action_near"
            android:text="@string/btn_action_three" />

        <Button
            android:id="@+id/btn_action_four"
            style="@style/btn_action_far"
            android:text="@string/btn_action_four" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action_five"
            style="@style/btn_action_near"
            android:text="@string/btn_action_five" />

        <ToggleButton
            android:id="@+id/tb_action_four"
            style="@style/tb_climb"
            android:textOff="@string/tb_climb_off"
            android:textOn="@string/tb_climb_on"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_action_six"
            style="@style/btn_action_six"
            android:text="@string/btn_action_six" />

        <ToggleButton
            android:id="@+id/tb_action_three"
            style="@style/tb_incap"
            android:textOff="@string/tb_action_bool_three_off"
            android:textOn="@string/tb_action_bool_three_on" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_timer"
            style="@style/btn_proceed"
            android:enabled="true"
            android:text="@string/btn_timer_start" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_team_number"
                style="@style/tv_standard"
                android:layout_width="150dp"
                android:background="@color/white"
                android:textSize="@dimen/medium_text" />

            <Button
                android:id="@+id/btn_error"
                style="@style/btn_error"
                android:text="@string/btn_error" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_proceed_edit"
            style="@style/btn_proceed"
            android:enabled="false"
            android:text="@string/btn_to_teleop" />

    </LinearLayout>

</LinearLayout>